<Window x:Class="iikoServiceHelper.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Overlay" SizeToContent="WidthAndHeight"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False" Focusable="False" IsHitTestVisible="False">
    <Border Background="#E6121212" BorderBrush="#B026FF" BorderThickness="0,0,2,2" 
            CornerRadius="0,0,10,0" Padding="9">
        <TextBlock x:Name="txtMessage" Text="CMD" Foreground="#B026FF" 
                   FontSize="17" FontWeight="Bold" FontFamily="Segoe UI">
            <TextBlock.Effect>
                <DropShadowEffect Color="#B026FF" BlurRadius="10" ShadowDepth="0"/>
            </TextBlock.Effect>
        </TextBlock>
    </Border>
</Window>